{
  "name": "node-fullstack-websocket",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"server,app\" \"yarn workspace server dev\" \"yarn workspace app dev\"",
    "build": "yarn workspace server build && yarn workspace app build",
    "start": "NODE_ENV=production node dist/index.js",
    "dev:db:up": "docker-compose -f infrastructure/dev/docker-compose.yml up -d",
    "dev:db:down": "docker-compose -f infrastructure/dev/docker-compose.yml down"
  },
  "workspaces": {
    "packages": [
      "shared",
      "app",
      "server"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
