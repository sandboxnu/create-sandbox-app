{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es2017",
    "outDir": "dist",
    "isolatedModules": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
