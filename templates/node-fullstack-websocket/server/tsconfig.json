{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "es2017",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
